@{
  Layout = "_PreGameLayout";
}


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2> Character Form </h2>
      <form action="/Character/Create" method="post">
        <div class="form-group">
          <label for="name">Name: </label>
          <input type="text" name="name" id="name" required>
          <button type="submit" class="btn">Create New Character</button>
        </div>
      </form>
    </div>
  </div>
</div>
